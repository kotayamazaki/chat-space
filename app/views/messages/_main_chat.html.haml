.MainChat
  .RightHeader
    .RightHeader__content
      = @group.name
      .RightHeader__content__member
        member :
        - @group.users.each do |user|
          = user.name
    .RightHeader__edit
      = link_to edit_group_path(@group), class: "EditColor" do
        = "Edit"
  .MessageField
    = render @messages
    .MessageBox
      .MessageInfo
        .MessageInfo__userName
          ユーザー名
        .MessageInfo__date
          2020/2/2 12:22
      .Message
        %p.Message__content
          こんにちは
  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'